<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.progressbar.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.administrator.progressbar.view.HorizontalProgressbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:padding="5dp"
            android:layout_marginTop="30dp"/>

        <com.example.administrator.progressbar.view.HorizontalProgressbar
            android:id="@+id/id_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:padding="5dp"
            hyman:progress_text_color="#44ff0000"
            hyman:progress_unreach_color="#eee"
            android:layout_marginTop="30dp"/>


        <!--圆形进度条-->
        <com.example.administrator.progressbar.view.RoundProgressBar
            android:id="@+id/id_roundProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:padding="15dp"
            hyman:radius="60dp"
            hyman:progress_text_color="#44ff0000"
            hyman:progress_unreach_color="#eee"
            android:layout_marginTop="30dp"/>


    </LinearLayout>
</ScrollView>
