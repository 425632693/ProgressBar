<?xml version="1.0" encoding="utf-8"?>
<!--声明自定义控件属性-->
<resources>
    <attr name="progress_unreach_color" format="color"/><!--未走进度条的颜色-->
    <attr name="progress_unreach_height" format="dimension"/><!--未走进度条的高度-->
    <attr name="progress_reach_color" format="color"/><!--已走进度条的颜色-->
    <attr name="progress_reach_height" format="dimension"/><!--已走进度条的高度-->
    <attr name="progress_text_color" format="color"/><!--字体的颜色-->
    <attr name="progress_text_sixe" format="dimension"/><!--字体的大小-->
    <attr name="progress_text_offset" format="dimension"/><!--字体和进度条之间的距离-->

    <!--上面是声明,下面是使用-->
    <declare-styleable name="HorizontalProgressbar">
        <attr name="progress_unreach_color"/>
        <attr name="progress_unreach_height" />
        <attr name="progress_reach_color" />
        <attr name="progress_reach_height" />
        <attr name="progress_text_color" />
        <attr name="progress_text_sixe" />
        <attr name="progress_text_offset" />

    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="radius" format="dimension"/>
    </declare-styleable>
</resources>